{
  "name": "@mess/assets",
  "workspaces": [
    "config/eslint",
    "config/stylelint",
    "config/typescript",
    "skeleton",
    "../Mess.{Modules,Themes}/*/Assets"
  ],
  "scripts": {
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint ./src/**/*.{js,ts}",
    "lint:stylelint": "stylelint ./src/**/*.{sass,scss,css}",
    "lint:workspaces": "yarn workspaces foreach -ip --exclude @mess/assets run lint",
    "lint": "run-s lint:tsc lint:eslint lint:stylelint lint:workspaces",
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@shopify/prettier-plugin-liquid": "^1.0.6",
    "@types/node": "^20.2.1",
    "@types/webpack": "^5.28.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.4",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^8.40.0",
    "eslint-webpack-plugin": "^4.0.1",
    "glob": "^10.2.5",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.6.2",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-webpack-plugin": "^4.1.1",
    "terser-webpack-plugin": "^5.3.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1"
  }
}
