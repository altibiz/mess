{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist"
  },
  "include": ["./index.js"]
}
