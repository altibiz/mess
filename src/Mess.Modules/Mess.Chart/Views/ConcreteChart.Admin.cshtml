<div 
    class="
      chart
      chart-title
      border
      rounded
      p-2
      ps-3
      mb-1
      d-flex
      flex-row
      justify-content-between
      align-items-center
    ">
  @if (Model.Content != null)
  {
    @await DisplayAsync(Model.Content)
  }
  else
  {
    @* For charts without a display driver *@
    <span>
      @Model.ContentItem.DisplayText
      <span class="text-muted dashed">
        @Model.ContentItem.ContentType
      </span>
    </span>
  }
  <div class="float-end">
      <button
          type="button"
          class="btn btn-primary btn-sm"
          data-bs-toggle="modal"
          data-bs-target="#modalChartTypes">
        @T["Change Type"]
      </button>
      <a 
          asp-route-area="Mess.Chart"
          asp-controller="ConcreteChartAdmin"
          asp-action="Delete"
          asp-route-contentItemId="@Model.ContentItemId"
          data-url-af="RemoveUrl UnsafeUrl"
          class="btn btn-danger btn-sm">
        @T["Delete"]
      </a>
  </div>
</div>