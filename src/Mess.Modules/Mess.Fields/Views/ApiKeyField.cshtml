@using OrchardCore.Mvc.Utilities
@model ApiKeyFieldViewModel

@{
  var name = (Model.PartFieldDefinition.PartDefinition.Name + "-" + Model.PartFieldDefinition.Name).HtmlClassify();
}

<div class="field field-type-apikeyfield field-name-@name">
  @if (
    string.IsNullOrEmpty(Model.Field.Hash) ||
    Model.Field.Salt is null
  )
  {
    <span>@T["Api key missing"]</span>
  }
  else
  {
    <span>@T["Api key generated"]</span>
  }
</div>
