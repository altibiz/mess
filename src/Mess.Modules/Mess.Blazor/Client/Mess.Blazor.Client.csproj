<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
    <UseBlazorWebAssembly>true</UseBlazorWebAssembly>
    <RunAOTCompilation>true</RunAOTCompilation>
    <WasmStripILAfterAOT>true</WasmStripILAfterAOT>
  </PropertyGroup>

  <ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="$(MessBlazorWebAssemblyVersion)" />
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="$(MessBlazorWebAssemblyVersion)" PrivateAssets="all" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/Mess.Prelude/Mess.Prelude.csproj" />
    <ProjectReference Include="../../../../src/Mess.Cms/Mess.Cms.csproj" />
  </ItemGroup>

	<ItemGroup>
		<ServiceWorker
      Include="./wwwroot/service-worker.js"
      PublishedContent="./wwwroot/service-worker-published.js" />
	</ItemGroup>

  <PropertyGroup>
    <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
  </PropertyGroup>

</Project>
