@using OrchardCore.ContentManagement.Display
@using OrchardCore.DisplayManagement.ModelBinding

@model EorMeasurementDeviceListViewModel

@inject IContentItemDisplayManager ContentItemDisplayManager
@inject IUpdateModelAccessor ModelUpdaterAccessor

<section>
  <h3 class="section-header">@T["Devices"]</h3>
  <table>
    <thead>
      <th scope="col">@T["Id"]</th>
      <th scope="col">@T["Mode"]</th>
      <th scope="col">@T["Voltage"]</th>
      <th scope="col">@T["Current"]</th>
      <th scope="col"></th>
    </thead>
    <tbody>
      @foreach (var (item, summary) in Model.EorMeasurementDevices)
      {
        <tr>
          <th scope="row">
            <a
                asp-route-area="Mess.Eor"
                asp-controller="EorMeasurementDevice"
                asp-action="Detail"
                asp-route-contentItemId="@item.ContentItemId">
              <span>
                @item.TitlePart.Value.Title
              </span>
            </a>
          </th>
          <td>
            <span>
              @summary?.Status?.Mode
            </span>
          </td>
          <td>
            <span>
              @summary?.LastMeasurement?.Voltage
            </span>
          </td>
          <td>
            <span>
              @summary?.LastMeasurement?.Current
            </span>
          </td>
          <td>
            <a
                asp-route-area="Mess.Eor"
                asp-controller="EorMeasurementDeviceAdmin"
                asp-action="Edit"
                asp-route-contentItemId="@item.ContentItemId"
                class="btn btn-primary btn-sm">
              <span>
                @T["Edit"]
              </span>
            </a>
            <a
                asp-route-area="Mess.Eor"
                asp-controller="EorMeasurementDeviceAdmin"
                asp-action="Delete"
                asp-route-contentItemId="@item.ContentItemId"
                class="btn btn-danger btn-sm">
              <span>
                @T["Delete"]
              </span>
            </a>
          </td>
        </tr>
      }
    </tbody>
  </table>
</section>