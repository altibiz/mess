@page "/app/owners"

@using Mess.Ozds.Abstractions.Indexes
@using Mess.Iot.Abstractions.Models
@using Mess.Ozds.Abstractions.Models
@using OrchardCore.Users.Models
@using OrchardCore.ContentFields.Indexing.SQL
@using System.Linq.Expressions
@using Mess.Ozds.Abstractions.Timeseries
@using Mess.Billing.Abstractions.Models
@using OrchardCore.ContentManagement.Records
@using OrchardCore.Users.Indexes

@if (_user is null) {
  return;
}

@if (_user.RoleNames.Contains("DistributionSystemOperatorRepresentative")) {
  <MudDataGrid
  T="ContentItem"
  MultiSelection="true"
  Items="@_systems"
  SortMode="SortMode.Multiple"
  Filterable="true"
  QuickFilter="@_quickFilter"
  RowClick="@RowClicked">
  <ToolBarContent>
    <MudText Typo="Typo.h6">@T["Owners"]</MudText>
    <MudSpacer />
    <MudTextField
      @bind-Value="_searchString"
      Placeholder="Search"
      Adornment="Adornment.Start"
      Immediate="true"
      AdornmentIcon="@Icons.Material.Filled.Search"
      IconSize="MudBlazor.Size.Medium"
      Class="mt-0">
    </MudTextField>
  </ToolBarContent>
  <Columns>
    <PropertyColumn
      Property="x => x.DisplayText"
      Title='@T["System"].Value'
      Sortable="false"
      Filterable="false" />
    <PropertyColumn
      Property="x => x.As<LegalEntityPart>().Representatives.UserIds[0]"
      Title='@T["Owner(s)"].Value' />
  </Columns>
  <PagerContent>
    <MudDataGridPager T="ContentItem" />
  </PagerContent>
</MudDataGrid>
}

@code {

    private string? _searchString;
    private User? _user;
    private ContentItem? _legalEntity;
    private IEnumerable<ContentItem>? _systems;
    private string SYSTEM_ROLE = "ClosedDistributionSystem";
    public record struct TabularData(ContentItem system, ContentItem systemOwner);
    private List<TabularData> _dataStruct = new List<TabularData>();
    protected override async Task OnInitializedAsync()
    {
      await WithTransientSessionAsync(async session => {
        _user = await this.GetAuthenticatedOrchardCoreUserAsync();

        _legalEntity = await session
          .Query<ContentItem, UserPickerFieldIndex>()
          .Where(index => index.ContentPart == "LegalEntityPart")
          .Where(index => index.SelectedUserId == _user.UserId)
          .FirstOrDefaultAsync();

        _systems = await session
          .Query<ContentItem, ClosedDistributionSystemIndex>()
          .Where(index => index.DistributionSystemOperatorContentItemId == _legalEntity.ContentItemId)
          .ListAsync();
      });
  }

  private Func<ContentItem, bool> _quickFilter => x =>
  {
    if (string.IsNullOrWhiteSpace(_searchString))
      return true;

    if (x.DisplayText.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
      return true;

    return false;
  };

  private string GetEmail(ContentItem user) {
    return user.As<LegalEntityPart>().Email.Text;
  }

  private void RowClicked() { }
}
