@page "/app"

@{
  var isSystemRepresentative = User?.RoleNames.Contains("ClosedDistributionSystemRepresentative") is true;
  var isOperatorRepresentative = User?.RoleNames.Contains("DistributionSystemOperatorRepresentative") is true;
  var isUnitRepresentative = User?.RoleNames.Contains("DistributionSystemUnitRepresentative") is true;
}

@if (isSystemRepresentative) {
  <SystemDashboard AuthenticatedUser="@User" />
}
@if (isOperatorRepresentative) {
  <OperatorDashboard AuthenticatedUser="@User" />
}
@if (isUnitRepresentative) {
  <UnitDashboard AuthenticatedUser="@User" />
}
