@using Mess.Ozds.Abstractions.Indexes
@using Mess.Billing.Abstractions.Models
@using Mess.Ozds.Abstractions.Models
@using OrchardCore.Users.Models
@using OrchardCore.ContentFields.Indexing.SQL
@using System.Linq.Expressions

<MudDataGrid
  T="ContentItem"
  MultiSelection="true"
  Items="@_units"
  SortMode="SortMode.Multiple"
  Filterable="true"
  QuickFilter="@_quickFilter"
  RowClick="@RowClicked">
  <ToolBarContent>
    <MudText Typo="Typo.h6">@T["Units"]</MudText>
    <MudSpacer />
    <MudTextField
      @bind-Value="_searchString"
      Placeholder="Search"
      Adornment="Adornment.Start"
      Immediate="true"
      AdornmentIcon="@Icons.Material.Filled.Search"
      IconSize="MudSize.Medium"
      Class="mt-0">
    </MudTextField>
  </ToolBarContent>
  <Columns>
    <PropertyColumn
      Property="x => x!.ContentItemId"
      Title='@T["Id"].Value'
      Sortable="false"
      Filterable="false" />
    <PropertyColumn
      Property="x => GetName(x!)"
      Title='@T["Name"].Value' />
  </Columns>
  <PagerContent>
    <MudDataGridPager T="ContentItem" />
  </PagerContent>
</MudDataGrid>

@code {
  [Parameter]
  public Expression<Func<DistributionSystemUnitIndex, bool>>? Where { get; set; }

  private IEnumerable<ContentItem>? _units;

  private string? _searchString;

  private Func<ContentItem, bool> _quickFilter => x =>
  {
    if (string.IsNullOrWhiteSpace(_searchString))
      return true;

    if (GetName(x).Contains(_searchString, StringComparison.OrdinalIgnoreCase))
      return true;

    return false;
  };

  private string GetName(ContentItem unit) {
    return unit.As<LegalEntityPart>().Name.Text;
  }

  private void RowClicked() { }

  protected override async Task OnInitializedAsync()
  {
    await WithSessionLockAsync(async services => {
      var session = services.GetRequiredService<ISession>();
      var query = session.Query<ContentItem, DistributionSystemUnitIndex>();
      if (Where is not null) {
        query = query.Where(Where);
      }

      _units = await query.ListAsync();
    });
  }
}
