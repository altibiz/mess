@using Mess.Ozds.Abstractions.Indexes
@using Mess.Billing.Abstractions.Models
@using Mess.Ozds.Abstractions.Models
@using OrchardCore.Users.Models
@using OrchardCore.ContentFields.Indexing.SQL
@using System.Linq.Expressions
@using OrchardCore.ContentManagement.Records

<MudDataGrid
  T="ContentItem"
  MultiSelection="true"
  Items="@_operators"
  SortMode="SortMode.Multiple"
  Filterable="true"
  QuickFilter="@_quickFilter"
  RowClick="@RowClicked">
  <ToolBarContent>
    <MudText Typo="Typo.h6">@T["Operators"]</MudText>
    <MudSpacer />
    <MudTextField
      @bind-Value="_searchString"
      Placeholder="Search"
      Adornment="Adornment.Start"
      Immediate="true"
      AdornmentIcon="@Icons.Material.Filled.Search"
      IconSize="Size.Medium"
      Class="mt-0">
    </MudTextField>
  </ToolBarContent>
  <Columns>
    <PropertyColumn
      Property="x => x!.ContentItemId"
      Title='@T["Id"].Value'
      Sortable="false"
      Filterable="false" />
    <PropertyColumn
      Property="x => GetName(x)"
      Title='@T["Name"].Value' />
  </Columns>
  <PagerContent>
    <MudDataGridPager T="ContentItem" />
  </PagerContent>
</MudDataGrid>

@code {
  [Parameter]
  public Expression<Func<ContentItemIndex, bool>>? Where { get; set; }

  private IEnumerable<ContentItem>? _operators;

  private string? _searchString;

  private Func<ContentItem, bool> _quickFilter => x =>
  {
    if (string.IsNullOrWhiteSpace(_searchString))
      return true;

    if (GetName(x).Contains(_searchString, StringComparison.OrdinalIgnoreCase))
      return true;

    return false;
  };

  private string GetName(ContentItem? _operator) {
    return _operator.As<LegalEntityPart>().Name.Text;
  }

  private void RowClicked() { }

  protected override async Task OnInitializedAsync()
  {
    await WithTransientSessionAsync(async session => {
      var query = session
        .Query<ContentItem, ContentItemIndex>()
        .Where(index => index.ContentType == "DistributionSystemOperator");
      if (Where is not null) {
        query = query.Where(Where);
      }

      _operators = await query.ListAsync();
    });
  }
}
