    <MudGrid Class="my-3">
        <MudItem xs="6">
          <MudPaper Class="mud-width-full py-8 px-8" Height="300px">
            <MudItem Class="" Style="font-size: large; font-weight: bold;">
              <MudText Typo="Typo.h4">
