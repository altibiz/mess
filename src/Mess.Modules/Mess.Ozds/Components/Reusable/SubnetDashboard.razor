            </MudItem>
            <MudContainer Class="d-flex justify-center" MaxWidth="MaxWidth.Small">
              <MudText Typo="Typo.h4">
                @if(_lastMonthTotal is not null)
                  @(DecimalString((decimal)_lastMonthTotal/1000, 0))
