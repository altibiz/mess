{
  "name": "@mess/publishing",
  "scripts": {
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint ./src/**/*.{js,ts}",
    "lint": "run-s lint:tsc lint:eslint",
    "dev": "ts-node ./src/index.ts",
    "build": "run-s build:tsc build:pkg",
    "build:tsc": "tsc",
    "build:pkg": "pkg ./dist/index.js --out-path ./dist",
    "build:ncc": "ncc build ./src/index.ts --target es2020 --out ./dist",
    "build:webpack": "webpack --mode production",
    "start": "run-s start:webpack",
    "start:ncc": "node ./dist/index.js",
    "start:webpack": "node ./dist/index.js",
    "eval": "ts-node"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "glob": "^10.2.6",
    "handlebars": "^4.7.7",
    "luxon": "^3.3.0",
    "modbus-serial": "^8.0.11",
    "mqtt": "^4.3.7",
    "pako": "^2.1.0",
    "yargs": "^17.7.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.0.6",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.2.3",
    "@types/pako": "^2.0.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.40.0",
    "pkg": "^5.8.1",
    "prettier": "^2.8.8",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.86.0",
    "webpack-cli": "^5.1.4",
    "wscat": "^5.2.0"
  }
}
