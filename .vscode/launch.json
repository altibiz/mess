{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug",
      "type": "coreclr",
      "request": "launch",
      // TODO: make this not depend on the version?
      "program": "${workspaceFolder}/src/Mess.Web/bin/Debug/net8.0/Mess.Web.dll",
      "preLaunchTask": "build",
      "cwd": "${workspaceFolder}/src/Mess.Web",
      "stopAtEntry": false,
      "requireExactSource": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "ORCHARD_APP_DATA": "${workspaceFolder}/App_Data"
      },
      "logging": {
        "moduleLoad": false
      }
    }
  ]
}
