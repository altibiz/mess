{
  "name": "@mess/mess",
  "version": "0.0.1",
  "description": "Measurement Event Store (Something)",
  "repository": "https://github.com/altibiz",
  "author": "Altibiz",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "lint:prettier": "prettier --check --ignore-path .prettierignore .",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint ./scripts/**/*.{js,ts}",
    "lint:workspaces": "yarn workspaces foreach -ip --exclude @mess/mess run lint",
    "lint": "run-s lint:prettier lint:tsc lint:eslint lint:workspaces",
    "format": "prettier --write --ignore-path .prettierignore .",
    "build": "yarn workspaces foreach -ip run build",
    "watch": "yarn workspaces foreach -ip run watch",
    "script": "ts-node ./scripts/index.js",
    "publishing": "yarn workspace @mess/publishing dev"
  },
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "src/Mess.Assets",
    "src/Mess.Publishing"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@shopify/prettier-plugin-liquid": "^1.2.2",
    "@tsconfig/node20": "^20.1.0",
    "@types/luxon": "^3.3.1",
    "@types/node": "~20.4.8",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "glob": "^10.3.3",
    "handlebars": "^4.7.8",
    "husky": "^8.0.3",
    "luxon": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "tree-kill": "^1.2.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "winston": "^3.10.0",
    "yargs": "^17.7.2"
  }
}
