{
  "name": "@mess/mess",
  "version": "0.0.1",
  "description": "Measurement Event Store (Something)",
  "main": "index.js",
  "repository": "https://github.com/altibiz",
  "author": "Altibiz",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint:workspaces": "yarn workspaces foreach -ip --exclude @mess/mess run lint",
    "lint:prettier": "prettier --check --ignore-path .gitignore . '!**/wwwroot/**/*.*' '!.yarn/**/*.*' '!**/Snapshots/**/*.{received,verified}.json' '!vendor/'",
    "lint": "run-s lint:prettier lint:workspaces",
    "format": "prettier --write --ignore-path .gitignore . '!**/wwwroot/**/*.*' '!.yarn/**/*.*' '!**/Snapshots/**/*.{received,verified}.json' '!vendor/'",
    "build": "yarn workspaces foreach -ip run build",
    "watch": "yarn workspaces foreach -ip run watch",
    "eval": "yarn ts-node",
    "dev:publishing": "yarn workspace @mess/publishing dev",
    "build:publishing": "yarn workspace @mess/publishing build",
    "start:publishing": "yarn workspace @mess/publishing start"
  },
  "packageManager": "yarn@3.5.1",
  "workspaces": [
    "src/Mess.Assets",
    "src/Mess.Publishing"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@shopify/prettier-plugin-liquid": "^1.0.6",
    "@types/node": "^20.2.1",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
