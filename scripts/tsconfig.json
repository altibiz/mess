{
  // FIXME: "extends": "@tsconfig/node20/tsconfig.json",
  // "compilerOptions": {
  //   "allowJs": true,
  //   "checkJs": false,
  //   "outDir": "./dist",
  // },
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",

    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "files": true,
    "esm": true
  }
}
