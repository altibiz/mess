{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "plugins": ["@shopify/prettier-plugin-liquid"],
  "overrides": [
    {
      "files": ["*.json.hbs"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.xml.hbs"],
      "options": {
        "parser": "html"
      }
    }
  ]
}
